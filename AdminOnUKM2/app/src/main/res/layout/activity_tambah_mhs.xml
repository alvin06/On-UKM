<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahMhsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addMhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Tambah Mahasiswa"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorPinkOn"
            android:layout_marginBottom="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editTextEmailM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Email Mahasiswa"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorPinkOn"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextPassM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Password"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorPinkOn"
            android:inputType="textPassword" />

        <Spinner
            android:id="@+id/spinnerSbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:entries="@array/tipe"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/btnAddMhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Tambahkan"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:background="@drawable/roundedbuttonlogin"/>

    </LinearLayout>

</RelativeLayout>