<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailUserActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/textViewTitleDetailUser"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail User"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorPinkOn"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTitleDetailUser"
        android:layout_marginTop="-8dp"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Angkatan "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn" />

            <TextView
                android:id="@+id/titik1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="145dp"
                android:fontFamily="@font/roboto_regular"
                android:text=":   "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="140dp" />

            <TextView
                android:id="@+id/textViewAngkatanU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titik1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                android:layout_marginRight="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewUKMName"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Nama Pengguna "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/titik2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="145dp"
                android:fontFamily="@font/roboto_regular"
                android:text=":   "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="140dp" />

            <TextView
                android:id="@+id/textViewNamaU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titik2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                android:layout_marginRight="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewUKMName"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Departemen "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/titik5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="145dp"
                android:fontFamily="@font/roboto_regular"
                android:text=":   "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="140dp" />

            <TextView
                android:id="@+id/textViewDepartemen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titik5"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                android:layout_marginRight="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="NIM "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn" />

            <TextView
                android:id="@+id/titik3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="145dp"
                android:fontFamily="@font/roboto_regular"
                android:text=":   "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="140dp" />

            <TextView
                android:id="@+id/textViewNIMU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titik3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                android:layout_marginRight="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_regular"
                android:text="No. HP "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn" />

            <TextView
                android:id="@+id/titik4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="145dp"
                android:fontFamily="@font/roboto_regular"
                android:text=":   "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="140dp" />

            <TextView
                android:id="@+id/textViewTelpU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titik4"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_regular"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPinkOn"
                android:layout_marginRight="8dp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnEditUs"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="117dp"
        android:layout_marginStart="41dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/roboto_regular"
        android:text="Edit Pengguna"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:textColor="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="41dp" />

    <Button
        android:id="@+id/btnHapusUser"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnEditUs"
        android:layout_below="@id/textViewTotAnggonta"
        android:layout_marginEnd="40dp"
        android:background="@drawable/roundedbuttonwarning"
        android:fontFamily="@font/roboto_regular"
        android:text="Hapus Pengguna"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp" />

</RelativeLayout>