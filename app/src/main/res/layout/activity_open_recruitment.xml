<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alvinafandi.on_ukm.OpenRecruitmentActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:src="@drawable/agriaswara" />

            <TextView
                android:id="@+id/textViewUkm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_regular"
                android:text="Ini UKM Deragon Nes"
                android:textColor="@color/colorPinkDark"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:orientation="vertical"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Anggota"
                    android:textColor="@color/colorPinkDark"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:text="123"
                    android:id="@+id/anggota"
                    android:textColor="@color/colorPinkDark"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/selectPosterButton"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:src="@drawable/upload" />

        <EditText
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Deskripsi UKM"
            android:textColor="@color/colorPinkOn"
            android:textSize="14sp" />

        <Button
            android:id="@+id/postButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/roundedbutton"
            android:fontFamily="@font/roboto_regular"
            android:text="Buka Pendaftaran"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

